<idea-plugin>
    <id>org.ron_rs.intellij_ron</id>
    <name>RON</name>
    <vendor>ron_rs</vendor>

    <description><![CDATA[
    Currently adds highlighting support for the RON (Rust Object Notation) data format.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="RON file" implementationClass="org.ron_rs.intellij_ron.language.RONFileType" fieldName="INSTANCE" language="RON" extensions="ron" />
        <lang.parserDefinition language="RON" implementationClass="org.ron_rs.intellij_ron.language.RONParserDefinition"/>
        <lang.syntaxHighlighter language="RON" implementationClass="org.ron_rs.intellij_ron.language.RONSyntaxHighlighter"/>
    </extensions>
    <actions>
        <action id="org.ron_rs.intellij_ron.language.RONCreateFile"
                class="org.ron_rs.intellij_ron.language.RONCreateFile" text="RON File"
                description="Create new RON file">
            <add-to-group group-id="NewGroup" anchor="after" relative-to-action="NewFile"/>
        </action>
    </actions>
</idea-plugin>